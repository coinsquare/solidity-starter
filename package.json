    "smart contract",
    "starter"
  ],
  "author": "Coinsquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coinsquare/solidity-starter/issues"
  },
  "homepage": "https://github.com/coinsquare/solidity-starter#readme",
  "dependencies": {
    "truffle": "^5.1.3"
  },
  "devDependencies": {
    "ethlint": "^1.2.5",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.34"
  }
}
