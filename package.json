{
  "name": "solidity-starter",
  "version": "1.0.0",
  "description": "Starter codes for solidity smart contracts project with truffle, ethlint and solidity-prettier",
  "main": "",
  "scripts": {
    "test": "truffle test",
    "postinstall": "npm run compile",
